<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEBEE"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#666666"
            android:contentDescription="Close"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hướng dẫn sử dụng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Nội dung hướng dẫn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bước 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Đăng nhập hoặc đăng ký"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Để sử dụng đầy đủ tính năng, bạn cần đăng nhập. Từ màn hình chính, nhấn vào 'Đăng nhập' hoặc 'Đăng ký' để tạo tài khoản mới."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Bước 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Thêm sự kiện mới"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhấn vào biểu tượng '+' hoặc mục 'Thêm sự kiện' từ thanh điều hướng dưới cùng. Nhập tên sự kiện, ngày giờ diễn ra, và lưu lại."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Bước 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Xem thời gian đếm ngược"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quay lại màn hình chính, bạn sẽ thấy danh sách các sự kiện với thời gian đếm ngược được cập nhật tự động."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Bước 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Chỉnh sửa hoặc xóa sự kiện"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhấn vào biểu tượng cài đặt trên thẻ sự kiện để chỉnh sửa hoặc xóa. Bạn cũng có thể thêm ghi chú nếu cần."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Bước 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Tùy chỉnh ứng dụng"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ màn hình 'Cài đặt', bạn có thể thay đổi ngôn ngữ, giao diện, hoặc sao lưu dữ liệu sự kiện."
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>