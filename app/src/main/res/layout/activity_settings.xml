<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEBEE"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#666666"
            android:contentDescription="Close"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cài đặt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Thông tin người dùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="#666666"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhóm 7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khongthienphien@gmail.com"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thienphien không tồn tại."
                android:textSize="12sp"
                android:textColor="#FF0000"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Danh sách tùy chọn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvRename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi tên"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvBackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sao lưu"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_upload"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_help"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao diện"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_view"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvNewFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật tính năng mới"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ý kiến"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvInviteFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mời bạn bè"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_share"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hướng dẫn sử dụng"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_help"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvReportBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Báo lỗi"
            android:textSize="18sp"
            android:padding="8dp"
            android:drawableStart="@android:drawable/ic_menu_report_image"
            android:drawablePadding="16dp"/>

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="18sp"
            android:padding="10dp"
            android:drawableStart="@android:drawable/ic_lock_power_off"
            android:drawablePadding="16dp"/>
    </LinearLayout>

    <!-- Phiên bản -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phiên bản 1.1.1"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="16dp"/>
</LinearLayout>